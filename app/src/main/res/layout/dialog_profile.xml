<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="25dp"
    android:paddingStart="35dp"
    android:paddingEnd="35dp"
    android:background="@drawable/dialog_default_background">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:clickable="false"
        android:contentDescription="@string/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user_icon"/>

    <LinearLayout
        android:id="@+id/ProfileDialog_DisplayNameContainer"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:maxLength="50"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/ProfileDialog_DisplayName"
            android:textSize="22.5sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oswald_bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:contentDescription="@null"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>

    <TextView
        android:linksClickable="true"
        android:autoLink="web"
        android:maxLength="200"
        android:ellipsize="end"
        android:maxLines="7"
        android:id="@+id/ProfileDialog_Biography"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#a6a6a6"
        android:fontFamily="@font/oswald_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ProfileDialog_MoreOptionsButton"
        android:layout_marginTop="35dp"
        android:textSize="15sp"
        android:textColor="#0a82ff"
        android:fontFamily="@font/oswald_bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/more_options_button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_options"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>